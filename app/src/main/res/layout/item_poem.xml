<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/list_row_height"
        android:padding="@dimen/comm_padding_medium"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:textSize="@dimen/comm_text_size"
        android:gravity="center_vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_divide"/>

    <View
        android:id="@+id/lastPadding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_padding_medium"
        android:background="@android:color/transparent"
        android:visibility="gone"/>
</LinearLayout>
