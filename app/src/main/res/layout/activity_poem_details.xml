<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/poemTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_text_view_height"
            android:background="@drawable/comm_bg"
            android:textSize="@dimen/comm_text_size"
            android:text="@string/app_title"
            android:textIsSelectable="true"
            android:gravity="center"/>

        <TextView
            android:id="@+id/poemDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/comm_text_size"
            android:paddingTop="@dimen/comm_padding_medium"
            android:padding="@dimen/comm_padding_small"
            android:lineSpacingExtra="@dimen/comm_padding_small"
            android:gravity="center"/>
    </LinearLayout>


</ScrollView>
